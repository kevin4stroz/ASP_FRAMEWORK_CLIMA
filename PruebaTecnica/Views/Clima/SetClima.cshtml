@model PruebaTecnica.Datos.Clima
@{
    Layout = "~/Views/Shared/_Pagina.cshtml";
}


@using (Html.BeginForm())
{
    @Html.TextBoxFor(m => Model.ClimaId, new { @class = "form-control", type = "hiden" })
    <div class="row">
        <div class="form-group" col>
            <label>Localidad</label>
            @Html.TextBoxFor(m => Model.Localidad, new { @class = "form-control", type = "text" })
        </div>
        <div class="form-group" col>
            <label>Temperatura</label>
            @Html.TextBoxFor(m => Model.Temperatura, new { @class = "form-control", type = "number" })
        </div>
        <div class="form-group" col>
            <label>Trecipitaciones</label>
            @Html.TextBoxFor(m => Model.Trecipitaciones, new { @class = "form-control", type = "number" })
        </div>

    </div>

    <div class="row">
        <div class="form-group" col>
            <label>Viento</label>
            @Html.TextBoxFor(m => Model.Viento, new { @class = "form-control", type = "number" })
        </div>
        <div class="form-group" col>
            <input value='@(Model.ClimaId > 0 ? "Modificar" : "Crear")' class="btn btn-success" type="submit">
        </div>

    </div>


}

