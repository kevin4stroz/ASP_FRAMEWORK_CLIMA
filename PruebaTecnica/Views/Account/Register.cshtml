@model PruebaTecnica.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_InicialPartial.cshtml";
}

<div id="login-box">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="logo">
            <h1 class="logo-caption"><span class="tweak">@ViewBag.Title</span></h1>
        </div>


        <div class="controls">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Correo" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar contraseña" })

            <button type="submit" class="btn btn-default btn-block btn-custom">Registrarse</button>
            <br />
            <p>
                @Html.ActionLink("Iniciar sesion", "Login", new { }, new { @class = "btn btn-info btn-block" })
            </p>

        </div>
        <div class="whitetext">
            @Html.ValidationSummary("", new { @class = ".whitetext" })
        </div>
        

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}