@using PruebaTecnica.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesion";
    Layout = "~/Views/Shared/_InicialPartial.cshtml";
}
<div id="login-box">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="logo">
            <h1 class="logo-caption"><span class="tweak">@ViewBag.Title</span></h1>
        </div>


        <div class="controls">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "label label-danger" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Correo" }) 


            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "label label-danger" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })


            <button type="submit" class="btn btn-default btn-block btn-custom">Iniciar sesion</button>
            <br />
            <p>
                @Html.ActionLink("Registrarse como usuario nuevo", "Register", new { }, new { @class = "btn btn-info btn-block" })
            </p>

        </div>
        @Html.ValidationSummary(true, "", new { @class = "label label-danger" })


    }


</div> 
@section Scripts {
     @Scripts.Render("~/bundles/jqueryval")
}
